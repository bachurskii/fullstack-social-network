{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "dist"]
}
